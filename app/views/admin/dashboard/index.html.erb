<h1>Admin Dashboard</h1>

<div class="stats">
  <p><strong>Total Tickets:</strong> <%= @total_tickets %></p>
  <p><strong>Open Tickets:</strong> <%= @open_tickets %></p>
  <p><strong>Closed Tickets:</strong> <%= @closed_tickets %></p>
  <p><strong>Active Users:</strong> <%= @active_users %></p>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>User</th>
      <th>Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.title %></td>
        <td><%= ticket.status %></td>
        <td><%= ticket.user.email %></td>
        <td><%= ticket.created_at.strftime("%d %b %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Tickets by Status</h2>
<%= image_tag 'tickets_by_status.png' %>

<h2>Top 5 Users by Ticket Volume</h2>
<%= image_tag 'tickets_per_user.png' %>


