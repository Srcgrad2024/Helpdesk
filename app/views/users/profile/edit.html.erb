<!-- Edit user profile form -->
<h1 class="section-title">Edit Profile</h1>

<%= form_with model: current_user, url: profile_path, method: :patch, local: true do |f| %>
  <div class="form-group"><%= f.label :name %><%= f.text_field :name, class: "input" %></div>
  <div class="form-group"><%= f.label :surname %><%= f.text_field :surname, class: "input" %></div>
  <div class="form-group"><%= f.label :contact %><%= f.text_field :contact, class: "input" %></div>
  <div class="form-group"><%= f.label :email %><%= f.email_field :email, class: "input", readonly: true, title: "Email cannot be from this page. Navigate to Settings to change it." %></div>
  <small class="hint">Email is readâ€‘only. Please navigate to Settings page to change your email address.</small>
  
  <div class="profile-actions">
    <br>
    <%= f.submit "Save", class: "btn btn-primary" %>
    <%= link_to "Cancel", profile_path, class: "btn btn-primary-outline" %>
  </div>
<% end %>
