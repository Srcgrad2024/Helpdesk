<!DOCTYPE html>
<html>
  <head>
    <title>IT Helpdesk</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="theme-orange">

    <header class="app-header">
      <h1 class="brand">IT Helpdesk</h1>
      <div class="logo-placeholder">&lt;Logo&gt;</div>
    </header>

    <nav class="nav">
      <% if user_signed_in? %>           
        <%= link_to "Home", root_path %>
        <%= link_to "My Tickets", tickets_path %>
        <%= link_to "Profile", profile_path %>
        <%= link_to "Settings", edit_user_registration_path %>
        <%= link_to "About Us", "#" %>
      <% end %>

      <% if user_signed_in? && current_user.admin? %>
        <%= link_to "Admin Dashboard", admin_dashboard_path %>
      <% end %>
    </nav>

    <nav class="nav1">
      <% if user_signed_in? %>              
        <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }%>
      <% end %>
    </nav>

    <main class="container">
      <% if notice %><p class="flash notice"><%= notice %></p><% end %>
      <% if alert %><p class="flash alert"><%= alert %></p><% end %>
      <%= yield %>
    </main>

    <footer class="app-footer">
      <span>SRC Solutions @ 2025</span>
    </footer>
  </body>
</html>

