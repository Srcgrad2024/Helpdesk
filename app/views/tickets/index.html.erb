<!-- View for displaying a list of tickets -->
<% content_for :title, "Tickets" %>

<h1>Tickets</h1>

<div class="ticket-list">  
    <% @tickets.each do |ticket| %>    
      <div class="ticket-card">
        <p><strong>Ticket #<%= ticket.id %></strong></p>
        <p><strong>Title/Summary:</strong> <%= ticket.title %></p>
        <p><strong>Status:</strong> <%= ticket.status %></p>
        <p><%= link_to "Show this ticket", ticket, class: "btn btn-primary" %></p>
      </div>    
    <% end %>
</div>

<br><br>
<%= link_to "New ticket", new_ticket_path, class: "btn btn-primary" %>
<br><br><br>

